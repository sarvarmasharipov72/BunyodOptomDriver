<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.buyurtmalar.BuyurtmalarFragment">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">


       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:background="@color/white"
           android:elevation="3dp">

           <ImageButton
               android:id="@+id/imageButtonBuyurtma"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="64dp"
               android:background="@color/white"
               android:src="@drawable/ic_buyurtma"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               style="@style/title_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="12dp"
               android:layout_marginTop="64dp"
               android:text="@string/buyurtmalar" />

       </androidx.appcompat.widget.Toolbar>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/lightGrey" />

       <ImageView
           android:id="@+id/imageBuyurtma"
           android:layout_width="match_parent"
           android:layout_height="240dp"
           android:scaleType="fitXY"
           app:layout_constraintTop_toBottomOf="@id/imageButtonBuyurtma"
           tools:src="@tools:sample/avatars"
           android:layout_marginTop="50dp"
           />
       <TextView
           android:id="@+id/brandType"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/imageBuyurtma"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="24dp"
           tools:text="Snickers mini"
           android:textSize="26sp"
           android:textColor="@color/black"
           android:padding="1dp"
           android:layout_marginTop="25dp"
           android:fontFamily="@font/source_sans_pro_semi_bold"
           />
       <TextView
           android:id="@+id/descriptionBox"
           android:layout_width="match_parent"
           android:layout_height="115dp"
           app:layout_constraintTop_toBottomOf="@id/brandType"
           android:layout_marginHorizontal="24dp"
           tools:text="@tools:sample/lorem/random"
           android:textSize="18sp"
           android:gravity="center_vertical"
           android:fontFamily="@font/source_sans_pro_extra_light"
           android:padding="1dp"
           android:layout_marginTop="5dp"/>
       <TextView
           android:id="@+id/brandName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/descriptionBox"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="24dp"
           android:text="Brand"
           android:textColor="#B3000000"
           android:textSize="18sp"
           android:padding="1dp"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/brandName"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginTop="5dp"
           android:layout_marginStart="24dp"/>

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>