<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginFragmentTwo"
    >
    <ImageButton
        android:id="@+id/btnBackLoginTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_arrow_back"
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tasdiqlash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_semi_bold"
        android:text="Tasdiqlash kodi"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@id/confirmCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"

        />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/confirmCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:constraint_referenced_ids="numberOne,numberTwo,numberThree,numberFour"
        app:layout_constraintBottom_toTopOf="@id/confirmCodeDetailes"
        app:layout_constraintTop_toBottomOf="@id/tasdiqlash"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/numberOne"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:textSize="20sp"
        android:lines="1"
        android:paddingHorizontal="20dp"
        android:maxLength="1"
        android:drawableBottom="@drawable/ic_vector"
        android:gravity="bottom|center"
        android:paddingBottom="20dp"
        android:background="@drawable/edittext_background_two"

        />

    <EditText
        android:id="@+id/numberTwo"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:textSize="20sp"
        android:paddingHorizontal="20dp"
        android:maxLength="1"
        android:drawableBottom="@drawable/ic_vector"
        android:gravity="bottom|center"
        android:paddingBottom="20dp"
        android:lines="1"
        android:background="@drawable/edittext_background_two"

        />

    <EditText
        android:id="@+id/numberThree"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:textSize="20sp"
        android:lines="1"
        android:paddingHorizontal="20dp"
        android:maxLength="1"
        android:drawableBottom="@drawable/ic_vector"
        android:gravity="bottom|center"
        android:paddingBottom="20dp"

        android:background="@drawable/edittext_background_two"

        />

    <EditText
        android:id="@+id/numberFour"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:textSize="20sp"
        android:lines="1"
        android:paddingHorizontal="20dp"
        android:maxLength="1"
        android:drawableBottom="@drawable/ic_vector"
        android:gravity="bottom|center"
        android:paddingBottom="20dp"
        android:background="@drawable/edittext_background_two"

        />

    <TextView
        android:id="@+id/confirmCodeDetailes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textview_background"
        android:fontFamily="@font/source_sans_pro_extra_light"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:text="tasdiqlash kodi +998 (33) 513-60-53 ga sms orqali yuborildi. ushbu kodni 1:00 vaqt ichida kiritishingiz kerak"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/btnKirishTwo"
        app:layout_constraintTop_toBottomOf="@id/confirmCode"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnKirishTwo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#0081FE"
        android:text="@string/kirish"
        android:textAllCaps="false"
        android:fontFamily="@font/source_sans_pro_extra_light"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>